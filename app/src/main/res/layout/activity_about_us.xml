<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF8E1"
    android:orientation="vertical"
    tools:context=".AboutUs">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#FFBF00"
        android:layout_margin="5dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/aboutArrow"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            app:srcCompat="@drawable/back" />

    </LinearLayout>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imgAbout001"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                app:srcCompat="@drawable/womenintech" />

            <TextView
                android:id="@+id/aboutTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:padding="9dp"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:layout_marginTop="6dp"
                android:textStyle="bold"
                android:text="" />

            <TextView
                android:id="@+id/aboutInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:textColor="#757575"
                android:padding="9dp"
                android:background="@drawable/textviewsshape"
                android:textSize="25sp"
                android:text="" />

            <ImageView
                android:id="@+id/imgAbout002"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/womenintechaboutus" />

            <TextView
                android:id="@+id/ourMissionTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textSize="20sp"
                android:padding="9dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="" />

            <TextView
                android:id="@+id/ourMissionInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/textviewsshape"
                android:textSize="24sp"
                android:textColor="#757575"
                android:padding="9dp"
                android:layout_marginTop="6dp"
                android:text="" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>